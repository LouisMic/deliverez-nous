<h2 class="text-center mt-2">S'identifier</h2>

<div class="container offset-4 col-4 mt-5 formcreate">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                label: "Courriel",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: "Mot de passe",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions d-grid gap-2 text-center ">
    <%= f.button :submit, "Se connecter", class: "btn btn-lg btn-block button-orange" %>
  </div>
<% end %>
<div class="form-actions mt-3 text-center">
<%= render "devise/shared/links" %>
</div>
