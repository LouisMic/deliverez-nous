<div class="backhome pt-5">
  <div class="offset-2 col-8 d-grid shadow bg-white" data-controller="change-photo-in-show">
    <div class="row">
      <div class="col-4" id="cardalign">
       <% if @show.photos[0] %>
      <%= cl_image_tag @show.photos[0].key, class:"h-auto w-100 img-fluid", "data-change-photo-in-show-target" => "photo"%>
      <% else %>
         <%= image_tag asset_url("logo4b.png"), class:"img-fluid rounded-start h-auto w-100" %>
      <% end %>
    </div>
    <div class="col-8 d-flex flex-column justify-content-between">
      <div class="card-title mt-3">
        <h1><%= @show.name %></h1>
        <h4>crÃ©ateur : <%= @show.company %></h4>
      </div>
      <div class="flex-grow-1 d-flex align-items-center mb-2 me-4">
        <p><%= @show.description %></p>
      </div>
      <div class="widgets mb-3">
        <% @show.photos.each do |photo| %>
          <%= cl_image_tag photo.key, "data-action" => "click->change-photo-in-show#change_photo", "style" => "cursor: pointer"  %>
        <% end %>
      </div>
    </div>
    <div class="mt-3 mb-3 d-flex justify-content-center">
      <% if current_user != @show.user %>
      <%= button_to "RÃ©server", bookings_path(id: @show.id, address: @address, category: @category, date: @date), method: :post, class:"btn btn-primary button-orange" %>
      <% end %>
    </div>
  </div>
</div>
