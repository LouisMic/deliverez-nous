<div class="col-10 offset-1">
  <% shows.each do |show| %>
    <div class="card mb-3 shadow w-50">
      <div class="row g-0">
        <div class="col-md-4">
          <%= image_tag 'magician.jpg', class:"img-fluid rounded-start"%>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title"><%= show.show.company %></h4>
            <p class="card-text"><%= show.show.description %></p>
            <div>
              <p class="card-text"><small class="text-muted"><strong>Créateur:</strong> <%= show.show.user.name %></small></p>
            </div>
            <span><strong>Prix:</strong> <%=show.show.price%></span>
          </div>
        </div>
        <div class="card-footer">
        <ul class="list-group list-group-horizontal">
          <li class="list-group-item m-1 hover">
             <%= link_to show_path(show) do %>
                <i class="fa-solid fa-magnifying-glass-plus orange-icon"></i>
             <% end %>
          </li>
          <li class="list-group-item m-1 hover">
             <%= link_to booking_path(show), data:{turbo_method: :delete, turbo_confirm:'Voulez-vous annuler votre réservation ?'} do %>
              <i class="fa-solid fa-trash-can orange-icon"></i>
             <% end %>
          </li>
        </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>
